	<!-- Root Context: defines shared resources visible to all other web components -->
	<bean id="springDataSource"
		class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">

		<property name="driverClassName"
			value="com.mysql.cj.jdbc.Driver" />
		<property name="url"
			value="jdbc:mysql://localhost:3306/Kuberbhandari" />
		<property name="username" value="root" />
		<property name="password" value="root" />

		<property name="maxIdle" value="100" />
		<property name="minIdle" value="10" />
		<property name="validationQuery" value="select curdate()" />
		<property name="removeAbandoned" value="true" />
		<property name="initialSize" value="20" />
		<property name="maxActive" value="30" />
	</bean>
	<bean id="countryDAO" class="com.ui.impl.CountryDAOImpl">
		<property name="dataSource" ref="springDataSource"></property>
